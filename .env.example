# Discord Bot Token
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN

# PostgreSQL Connection Settings
POSTGRES_DB=anonymous_bot_db
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=your_strong_password
